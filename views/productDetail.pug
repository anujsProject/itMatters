extends base

block content
  .row
    .col-1-of-2
      .product_img_part
        .product_img_part__img
          img.product_img_part__img__link(src=`/images/Product Categories/${product.productCategory.slug}/${product.productSubCategory.slug}/${product.images[0]}`)
        a.product_img_part__btn.product_img_part__btn--buy(href=`/products/bookProducts/chooseAddress/${product.productSubCategory.slug}/${product.slug}`) Buy Now
        a.product_img_part__btn.product_img_part__btn--addToCart.addToCartBtn(data-productid = `${product.id}`) Add to Cart

    .col-1-of-2 
      .product__info
        .product__info__heading.product__info__heading--top= product.brand
        .product__info__heading.product__info__heading--secondary= product.name
        -if(product.ratingsQuantity === 0)
          .product__info__rating No ratings yet
        -else 
          .product__info__rating
            span.product__info__rating__avg= product.ratingsAverage
            ion-icon.product__info__rating__star(name='star')
            span.product__info__rating__quantity= `(${product.ratingsQuantity})`
        .product__info__price
          .product__info__price--current &#8377;#{product.sellingPrice}
          .product__info__price--mrp &#8377;#{product.mrp}
          .product__info__price--offPercent #{product.off}% off
        .product__info__basic
          table
            tr.pincodeDeliveryRow
              td Delivery
              td.product__info__basic__pincode
                ion-icon.product__info__basic__pincode__locationIcon(name='location-outline')
                input.product__info__basic__pincode__input(type='text' placeholder='Pincode')
                a.product__info__basic__pincode__checkBtn(href="#") Check
            tr
              td Quantity
              td 
                input.product__quantity__input.productQuantityCart(type='Number' value='1')
            
            tr
              td Services
              td Free and easy return 
            tr 
              td
              td Cash on Delivery
            tr 
              td Seller
              td it
                span.bazaar Matters.com

        .product__info__details
          table
            tr
              td.product__info__details__heading(colspan='2') Product Specification
            tr.product__info__details__heading--secondary
              td(colspan='2') In the Box
            tr 
              td Sales Package
              td Packet of 1 Shirt

            tr.product__info__details__heading--secondary
              td(colspan='2') General

            tr 
              td Brand
              td= product.brand
            tr 
              td Material
              td= product.specification.material
            tr 
              td Fit
              td= product.specification.fit
            tr 
            tr 
              td Machine Wash
              -if(product.specification.machineWash)
                td Yes
              -if(!product.specification.machineWash)
                td No
            tr 
            tr 
              td Preffered Gender
              td= product.gender
            tr 
            tr 
              td Occasion
              td= product.specification.ocassion
            tr
              td Date First Available
              td Jan 2019
       
          
  hr
  .row 
    .product__review.clearfix
      .heading.heading--secondary.heading--reviews Ratings & Reviews
      .product__review__summary= `Overall Rating: ${product.ratingsAverage}/5 (${product.ratingsQuantity})` 
      //- Review Template
      each el in product.reviews
        .col-1-of-2
          .product__review__temp
            .product__review__user
              //- img.product__review__user__photo(src=`/images/users/${el.user.image}`)
              ion-icon.product__review__user__icon(name="person-circle")
              span.product__review__user__name= el.user.name
            .product__review__rating
              each star in [1, 2, 3, 4, 5]
                ion-icon.product__review__rating__star(name=`${el.rating >= star ? 'star' : 'star-outline'}`)
              span.product__review__title #{el.title}
            .product__review__date= `Reviewed on: ${el.createdOn.toLocaleString('en-us', {day:'numeric',month: 'long', year: 'numeric'})}`
            .product__review__description #{el.description}



                
          
          


 






