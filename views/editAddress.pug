extends base 

mixin formField(label, inputType, uniClass, val)
  .form__field
    label.form__field__label= label
    input.form__field__input(type=`${inputType}` class=`${uniClass}` value=`${val==='undefined' ? '' : val}`)

block content 
  .formDesign.formDesign__big
    .heading.heading--secondary.heading--design1.u-margin-bottom-small Update Address
    -let curAddr;
    -for(i = 0; i < user.address.length; i++)
      -if(user.address[i].id === addressId) curAddr = user.address[i];

    form.form.address__form.updateAddress__form(data-addressid = `${curAddr.id}` data-status = `${status}`)
      .form__field__row--address
        +formField('Full Name', 'text', 'fullName', `${curAddr.name}`)
        +formField('Mobile', 'text', 'mobile', `${curAddr.mobileNo}`)
      .form__field__row--address
        +formField('House No:', 'text', 'houseNo', `${curAddr.houseNo}`)
        +formField('Street', 'text', 'street', `${curAddr.street}`)
      .form__field__row--address
        +formField('Locality', 'text', 'locality', `${curAddr.locality}`)
        +formField('City', 'text', 'city', `${curAddr.city}`)
      .form__field__row--address
        +formField('Pincode', 'text', 'pincode', `${curAddr.pincode}`)
        +formField('District', 'text', 'district', `${curAddr.district}`)
      .form__field__row--address
        +formField('State', 'text', 'state', `${curAddr.state}`)
        +formField('Country', 'text', 'country', `${curAddr.country}`)
      .form__field__row--address
          button(type="submit").form__field__submitBtn Save
