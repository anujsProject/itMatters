extends base

block content
  .login
    .heading.heading--secondary.heading--design1.u-margin-bottom-small Forget Your Password
    form.form.forgetPassword__form
      .form__field
        label.form__field__label Email Address
        input.form__field__input.email(type='email')
      .form__field.clearfix
        button.form__field__submitBtn Submit
      a.form__field__linkAssist(href='/signup') Don't have account ? Register here
